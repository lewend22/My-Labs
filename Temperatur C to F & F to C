package com.mycompany.dietemperatur;

import java.util.Scanner;

public class DieTemperatur {

    
    
public static void main(String[] args) throws Exception{
    Scanner in = new Scanner(System.in);
        float gradCelsius ;
        float Fahrenheit ;
        System.out.println(new java.io.PrintStream(System.out,true,"UTF-8"));
        System.out.println("Diese App wird die Temperatur  von Grad Celsius in Fahrenheit umrechnen.");
        System.out.println("Wenn du von Celsius nach Fahrenheit umrechnen möchtest.Drück auf \'1\'\nWenn du von Fahrenheit nach Celsius umrechnen möchtest.Drück auf \'2\' ");
        System.out.println(":");
        char choice = in.next().charAt(0);
        switch(choice){
            case '1':
                System.out.println("Du musst nur die Temperatur eingeben : ");
                gradCelsius = in.nextFloat();
                System.out.println("Die Temperatur : "+gradCelsius+"C");
                Fahrenheit = (gradCelsius*9/5)+32 ;
                System.out.println("Die Temperatur in Fahrenheit : "+Fahrenheit+"F");
                break;
            case '2':
                System.out.println("Du musst nur die Temperatur eingeben : ");
                 Fahrenheit = in.nextFloat();
                 System.out.println("Die Temperatur : "+Fahrenheit+"F");
                 gradCelsius = ((Fahrenheit-32)*5)/9 ;
                 System.out.println("Die Temperatur in Celsius : "+gradCelsius+"C");
                         
        }
    }
}
