package com.mycompany.time;

import java.util.Scanner;


public class Time {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int minute,hour;
        System.out.println("This program to calculate how many hour based on minutes.\nEnter number of the minutes : ");
        minute = in.nextInt();
        hour = minute/60;
        minute = minute%60;
        System.out.println(hour+" hour "+minute+" minute.");
    }
}
